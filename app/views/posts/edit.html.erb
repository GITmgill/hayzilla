
<div class="fluid wizy">
  <h3>Edit Post</h3>
<%= form_for :post, url: post_path(@post), method: :patch do |f| %>
  <ul>
    <li>
      <%= f.text_field :title, :placeholder => "Title" %>
    </li>

    <li>
      <%= f.text_field :author, :placeholder => "Author" %>
    </li>

    <li>
      <%= f.text_area :short, :placeholder => "First Paragraph" %>
    </li>

    <li>
      <%= f.text_area :text, :placeholder => "Write your blog here", :class => "common", :id => "comments" %>
    </li>
    <li>
      <%= f.file_field :pics %>
    </li>
    <li>
      <%= f.select(:state, options_for_select([['Draft', 'draft'],['Publish', 'published']])) %>
    </li>
    <li>
      <%= f.submit %>
    </li>
  </ul>
<% end %>
 
<%= link_to 'Back', dashboard_path %>

</div>